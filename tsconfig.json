{
	"compilerOptions": {
	  "module": "commonjs",
	  "target": "es2015",
	  "declaration": true,
	  "outDir": "./dist",
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "typeRoots": ["./node_modules/@types"]
	},
	"include": ["src/**/*"],
	"exclude": [
	  "node_modules",
	  "**/dist/**/*",
	  "**/__tests__/**/*",
	  "**/__mocks__/**/*"
	]
  }
